{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "abi/**/*"],
    "exclude": ["node_modules"],
    "files": [
        "noop.ts"
    ]
}
